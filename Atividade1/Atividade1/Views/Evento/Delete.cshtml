@model Atividade1.Models.Evento

@{
    ViewData["Title"] = "Deletar Evento";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h1 class="text-danger text-center">Deletar Evento</h1>
            <h3 class="text-warning text-center">Tem certeza que deseja excluir este evento?</h3>

            <div class="card p-3 mb-3 bg-light">
                <h4 class="text-primary text-center">@Model.Nome</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>
                </dl>
            </div>

            <!-- Botões -->
            <div class="text-center">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="EventoID" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Deletar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@model IEnumerable<Atividade1.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📅 Lista de Eventos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Evento
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Nenhum evento cadastrado ainda.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th class="text-center">Participantes</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evento in Model)
                    {
                        <tr>
                            <td>@evento.Nome</td>
                            <td class="text-center">
                                <span class="badge bg-success">@evento.Cadastrantes?.Count() ?? 0</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@evento.EventoID" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@evento.EventoID" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@evento.EventoID" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

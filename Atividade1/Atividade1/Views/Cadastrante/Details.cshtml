@model Atividade1.Models.Cadastrante

@{
    ViewData["Title"] = "Detalhes do Cadastrante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center text-primary">Detalhes do Cadastrante</h1>

        <div class="card shadow-sm p-4 mt-4">
            <h4 class="mb-3">Informações do Cadastrante</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Evento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Evento.EventoID)
                </dd>
            </dl>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.CadastranteID" class="btn btn-warning btn-lg">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <br />
            <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Voltar para a Lista</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
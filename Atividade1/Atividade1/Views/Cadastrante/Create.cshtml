@model Atividade1.Models.Cadastrante

@{
    ViewData["Title"] = "Criar Cadastrante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center text-primary">Criar Cadastrante</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Nome -->
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cadastrante" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Digite o email do cadastrante" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Telefone -->
                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label">Telefone</label>
                        <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone do cadastrante" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                    <!-- CPF -->
                    <div class="mb-3">
                        <label asp-for="Cpf" class="form-label">CPF</label>
                        <input asp-for="Cpf" class="form-control" placeholder="Digite o CPF do cadastrante" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>

                    <!-- Data de Nascimento -->
                    <div class="mb-3">
                        <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                        <input asp-for="DataNascimento" type="date" class="form-control" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>

                    <!-- Evento -->
                    <div class="mb-3">
                        <label asp-for="EventoID" class="form-label">Evento</label>
                        <select asp-for="EventoID" class="form-control" asp-items="ViewBag.EventoID">
                            <option value="">Selecione um Evento</option>
                        </select>
                        <span asp-validation-for="EventoID" class="text-danger"></span>
                    </div>

                    <!-- Botão de Submissão -->
                    <div class="mb-3 text-center">
                        <input type="submit" value="Criar" class="btn btn-success w-100" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-link">Voltar à Lista</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>
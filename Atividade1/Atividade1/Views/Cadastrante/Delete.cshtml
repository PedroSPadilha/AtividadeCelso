@model Atividade1.Models.Cadastrante

@{
    ViewData["Title"] = "Deletar Cadastrante";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center text-danger">Deletar Cadastrante</h1>

        <div class="alert alert-warning text-center" role="alert">
            <h3>Tem certeza de que deseja excluir este cadastrado?</h3>
        </div>

        <div class="card shadow-sm p-4">
            <h4 class="mb-3">Detalhes do Cadastrante</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Evento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Evento.EventoID)
                </dd>
            </dl>
        </div>

        <div class="mt-4 text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CadastranteID" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Deletar
                </button>
            </form>
            <br>
            <a asp-action="Index" class="btn btn-secondary mt-3">Voltar para a Lista</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>